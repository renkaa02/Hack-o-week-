 <body class="h-full">
  <div id="app" class="h-full w-full overflow-auto"></div>
  <script>
    const defaultConfig = {
      background_color: "#f0f4f8",
      surface_color: "#ffffff",
      text_color: "#1e293b",
      primary_action_color: "#3b82f6",
      secondary_action_color: "#64748b",
      font_family: "Inter",
      font_size: 16,
      institute_name: "SYMBI AI",
      welcome_message: "Hello! How can I help you today?",
      phone_number: "+1-555-0123",
      email_address: "info@institute.edu",
      office_address: "123 Education Street, City, State 12345"
    };

    let config = { ...defaultConfig };
    let chatHistory = [];

    const faqData = [
      {
        patterns: ["hi", "hello", "hey", "hii", "hola", "greetings"],
